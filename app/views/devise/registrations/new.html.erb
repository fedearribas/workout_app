<div class="row">
    
  <div class="col-md-6 col-md-offset-3">
    <h2 class="text-center">Sign up</h2>
  </div>
  
  <div class="col-md-12">
    
    <%= form_for(resource, as: resource_name, :html => {class: 'form-horizontal', role:'form'} ,url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
    
    <div class="form-group">
        <div class="col-md-3 control-label">
          <%= f.label :first_name %>
        </div>
        <div class="col-md-6">
        <%= f.text_field :first_name, class:"form-control", autofocus: true %>
        </div>
      </div>
      
      <div class="form-group">
        <div class="col-md-3 control-label">
          <%= f.label :last_name %>
        </div>
        <div class="col-md-6">
        <%= f.text_field :last_name, class:"form-control", autofocus: true %>
        </div>
      </div>
    
    
      <div class="form-group">
        <div class="col-md-3 control-label">
          <%= f.label :email %>
        </div>
        <div class="col-md-6">
        <%= f.email_field :email, class:"form-control", autofocus: true %>
        </div>
      </div>
    
      <div class="form-group">
        <div class="col-md-3 control-label">
        <%= f.label :password %>
        </div>
        <div class="col-md-6">
           <%= f.password_field :password, class:"form-control",autocomplete: "off" %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
        </div>
       
      </div>
    
      <div class="form-group">
        <div class="col-md-3 control-label">
          <%= f.label :password_confirmation %>
        </div>
        <div class="col-md-6">
        <%= f.password_field :password_confirmation, class:"form-control", autocomplete: "off" %>
        </div>
      </div>
    
      <div class="form-group">
        <div class="col-md-offset-3 col-md-6">
          <%= f.submit "Sign up", class:"btn btn-primary" %>
        </div>
      </div>
    <% end %>
  
    <div class="form-group">
      <div class="col-md-offset-3 col-md-6">
        <%= render "devise/shared/links" %>
      </div>
    </div>

  </div>
</div>
